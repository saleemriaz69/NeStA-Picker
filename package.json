    "ink": "^6.3.1",
    "kleur": "^4.1.5",
    "playwright": "^1.55.0",
    "react": "^19.0.0",
    "sury": "11.0.0-alpha.3",
    "typia": "^9.7.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.36.0",
    "@ryoppippi/unplugin-typia": "^2.6.5",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^24.5.2",
